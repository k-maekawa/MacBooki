<div class="main users-index">
  <div class="container">
   <h1 class="users-heading">Trainer</h1>
   <div class="prefecture">
    <%= form_tag({:controller => "users", :action => "index"}, {:method => :post}) do %>
     <%= label_tag :prefecture, "都道府県" %>
     <%= select_tag :prefecture, options_for_select({選択してください: "選択してください",
     北海道:"北海道",青森県:"青森県",岩手県:"岩手県",宮城県:"宮城県",秋田県:"秋田県",山形県:"山形県",福島県:"福島県",
